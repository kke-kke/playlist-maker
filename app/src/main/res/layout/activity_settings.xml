<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/WhiteLinearLayout">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/toolbar_primary_margin"
            android:id="@+id/backArrowSettings"
            style="@style/BackToolbarButton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/toolbar_primary_margin"
            android:layout_marginStart="@dimen/toolbar_primary_margin"
            android:text="@string/settings"
            android:textColor="?attr/colorOnPrimary"
            style="@style/ToolbarTextView" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/themeSwitcher"
        android:text="@string/dark_theme"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin"
        style="@style/MenuItemTextView" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/share"
            style="@style/MenuItemTextView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/shareSettings"
            android:src="@drawable/ic_share_button"
            style="@style/MenuButton" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/support"
            style="@style/MenuItemTextView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/supportSettings"
            android:src="@drawable/ic_support"
            style="@style/MenuButton" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/user_agreement"
            style="@style/MenuItemTextView" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:id="@+id/userAgreementSettings"
            android:src="@drawable/ic_light_arrow"
            style="@style/MenuButton" />

    </FrameLayout>
</LinearLayout>