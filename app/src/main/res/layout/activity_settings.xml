<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/backArrowSettings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/toolbar_primary_margin"
            android:src="@drawable/ic_arrow_back"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/toolbar_primary_margin"
            android:layout_marginStart="@dimen/toolbar_primary_margin"
            android:text="@string/settings"
            android:textColor="@color/main_font_color"
            android:textSize="@dimen/toolbar_text" />

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_menu_text" />

        <Switch
            android:id="@+id/switchSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_menu_text" />

        <ImageButton
            android:id="@+id/shareSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/menu_end_margin"
            android:src="@drawable/ic_share_button"
            android:background="@color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/support"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_menu_text" />

        <ImageButton
            android:id="@+id/supportSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_support"
            android:background="@color/white" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/menu_vertical_margin"
        android:layout_marginStart="@dimen/menu_primary_margin"
        android:layout_marginEnd="@dimen/menu_end_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_menu_text" />

        <ImageButton
            android:id="@+id/userAgreementSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_light_arrow"
            android:background="@color/white" />

    </FrameLayout>
</LinearLayout>