<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/WhiteLinearLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/menu_vertical_margin"
        android:layout_gravity="center"
        android:text="@string/create_playlist"
        android:id="@+id/libraryCreatePlaylist"
        style="@style/RefreshSearchButton"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_44"
        android:layout_gravity="center"
        android:id="@+id/noPlaylistsPlaceholder"
        android:src="@drawable/nothing_found" />

    <TextView
        android:id="@+id/nothingInFavouritesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="@dimen/menu_primary_margin"
        android:text="@string/library_no_playlists"
        android:textAppearance="@style/SearchErrorText" />

</LinearLayout>