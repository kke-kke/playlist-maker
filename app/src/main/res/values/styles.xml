<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Main activity   -->
    <style name="BlueLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Text attributes -->
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <!-- Icon attributes -->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_radius</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <!-- Corner radius & button tint -->
        <item name="backgroundTint">?attr/colorButtonNormal</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>
    <style name="ToolbarTextView" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <!--    Sub activities  -->
    <style name="WhiteLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="BackToolbarButton">
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="TabLayoutStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
    </style>
    <!--    Settings menu   -->
    <style name="MenuItemTextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="MenuButton">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <!--    Search  -->
    <style name="SearchEditText">
        <!-- Input -->
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search</item>
        <item name="android:maxLines">1</item>
        <!-- Text attributes -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
    </style>
    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Start icon -->
        <item name="startIconDrawable">@drawable/ic_small_search</item>
        <item name="startIconTint">?attr/colorOnSurface</item>
        <!-- End icon -->
        <item name="endIconMode">clear_text</item>
        <item name="endIconDrawable">@drawable/ic_clear</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
        <!-- Hint text -->
        <item name="hintEnabled">false</item>
        <!-- Outlined -->
        <item name="boxStrokeWidth">0dp</item>
        <!-- Background & cursor -->
        <item name="cursorColor">@color/main_background_color</item>
        <item name="boxBackgroundColor">?android:attr/colorBackground</item>
        <!-- Corner radius -->
        <item name="boxCornerRadiusBottomEnd">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/menu_end_margin</item>
    </style>
    <style name="SmallTextRecycler">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>
    <style name="BigTextRecycler">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <!-- Search errors -->
    <style name="SearchErrorText">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/error_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="RefreshSearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Text attributes -->
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <!-- Corner radius & button tint -->
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">@dimen/refresh_button_radius</item>
    </style>
    <!-- Playlist creation -->
    <style name="PlaylistNameTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Cursor -->
        <item name="cursorColor">@color/main_background_color</item>
        <!-- Corner radius -->
        <item name="boxCornerRadiusBottomEnd">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusTopEnd">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusBottomStart">@dimen/menu_end_margin</item>
        <item name="boxCornerRadiusTopStart">@dimen/menu_end_margin</item>
        <!-- Hint & stroke colour -->
        <item name="boxStrokeColor">@drawable/text_input_field_stroke</item>
        <item name="android:textColorHint">@drawable/text_input_field_hint</item>
        <item name="hintTextColor">@drawable/text_input_field_hint</item>
    </style>
    <style name="PlaylistNameText">
        <!-- Input -->
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <!-- Text attributes -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="CreatePlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <!-- Text attributes -->
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <!-- Corner radius & button tint -->
        <item name="backgroundTint">@drawable/button_background_color</item>
        <item name="cornerRadius">@dimen/menu_end_margin</item>
    </style>
    <!-- Text styles -->
    <style name="BigTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="BigTextStyle2">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textColor">@color/main_font_color</item>
    </style>
    <style name="SmallTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="SmallTextPrimary">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="SmallTextBlack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/main_font_color</item>
    </style>
    <style name="SmallTextPrimaryBlue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/main_background_color</item>
    </style>
</resources>