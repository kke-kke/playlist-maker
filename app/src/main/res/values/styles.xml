<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_radius</item>
        <item name="iconTint">@color/main_font_color</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="ToolbarTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">@dimen/toolbar_primary_margin</item>
        <item name="android:layout_marginStart">@dimen/toolbar_primary_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MenuItemTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_menu_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="MenuButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="SettingsFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/menu_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/menu_primary_margin</item>
        <item name="android:layout_marginEnd">@dimen/menu_end_margin</item>
    </style>
</resources>